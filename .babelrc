{
  "presets": ["next/babel"],
  "env": {
    "test": {
      "presets": [
        [
          "next/babel",
          {
            "preset-env": {
              "modules": "commonjs"
            }
          }
        ]
      ]
    }
  },
  "plugins": [
    [
      "module-resolver",
      {
        "root": ["./"],
        "alias": {
          "lib": "./lib",
          "cmp": "./components",
          "ui": "./ui"
        }
      }
    ],
    [
      "styled-components",
      {
        "displayName": true,
        "preprocess": false
      }
    ]
  ]
}
